<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="?android:attr/actionBarSize"
        tools:context="com.example.warren.gsb.Ajout_medoc">

    <EditText
        android:id="@+id/edit_medoc_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/medoc_id"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_medoc_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_medoc_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_medoc_id"
        android:layout_below="@+id/edit_medoc_id"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/medoc_nom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_medoc_compo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_medoc_nom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_medoc_nom"
        android:layout_below="@+id/edit_medoc_nom"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/medoc_compo"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_medoc_effet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_medoc_contre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_medoc_contre"
        android:layout_below="@+id/edit_medoc_contre"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/medoc_effet"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_medoc_contre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_medoc_compo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_medoc_compo"
        android:layout_below="@+id/edit_medoc_compo"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/medoc_contre"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_medoc_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_medoc_effet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_medoc_effet"
        android:layout_below="@+id/edit_medoc_effet"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/medoc_prix"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal" />

        <!-- <Button
             android:id="@+id/buttonAdd"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="false"
             android:layout_below="@+id/edit_medoc_prix"
             android:layout_marginTop="43dp"
             android:onClick="add"
             android:text="@string/add_button" />-->

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/edit_medoc_prix"
            android:layout_centerHorizontal="true"
            android:onClick="next"
            android:text="@string/TextButtonNext" />

</RelativeLayout>
</ScrollView>